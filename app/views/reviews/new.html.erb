<div class="container">
  <h2>Write a review for <%= @restaurant.name %></h2>
  <%= simple_form_for [ @restaurant, @review ] do |f| %>
    <%= f.input :rating %>
    <%= f.input :content %>
    <%= f.submit "Submit Review", class: "btn btn-warning" %>
  <% end %>
  <%= link_to "Back to restaurant", restaurant_path(@restaurant) %>
</div>